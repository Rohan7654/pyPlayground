{
  "name": "pyplayground",
  "displayName": "pyPlayground",
  "publisher": "rohan7654",
  "description": "Lightweight Python function and selection playground for VS Code",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "python",
    "playground",
    "repl",
    "code runner",
    "vscode extension",
    "development", 
    "productivity",
    "coding"
  ],
  "contributes": {
  "commands": [
    {
      "command": "pyPlayground.open",
      "title": "Open pyPlayground"
    },
    {
      "command": "pyPlayground.runSelection",
      "title": "Run Selected Python Code in pyPlayground"
    }
  ],
  "menus": {
    "editor/context": [
      {
        "command": "pyPlayground.runSelection",
        "when": "editorHasSelection && editorLangId == python",
        "group": "navigation@99"
      }
    ]
  }
},
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.8",
    "@types/vscode": "^1.108.1",
    "mocha": "^11.7.5",
    "typescript": "^5.3.3"
  },
  "license" : "MIT"
}
