{
  "name": "pyplayground",
  "displayName": "PyPlayground â€“ Python Code Runner & Playground",
  "publisher": "rohan7654",
  "description": "Run selected Python code instantly in VS Code with an interactive playground for functions, snippets, and expressions.",
  "version": "0.1.2",
  "icon": "assets/logo.png",
  "engines": {
    "vscode": "^1.108.0"
  },
  "categories": [
  "Programming Languages",
  "Debuggers",
  "Other"
],
  "keywords": [
  "python",
  "python playground",
  "python runner",
  "run python code",
  "python repl",
  "python snippets",
  "python testing",
  "vscode python",
  "python development",
  "interactive python",
  "code playground",
  "code runner",
  "developer tools",
  "productivity"
  ],
  "contributes": {
  "commands": [
    {
      "command": "pyPlayground.open",
      "title": "Open pyPlayground"
    },
    {
      "command": "pyPlayground.runSelection",
      "title": "Run Selected Python Code in pyPlayground"
    }
  ],

  "keybindings": [
    {
      "command": "pyPlayground.runSelection",
      "key": "ctrl+alt+p",
      "mac": "cmd+alt+p",
      "when": "editorTextFocus && editorHasSelection && editorLangId == python"
    },
    {
      "command": "pyPlayground.open",
      "key": "ctrl+shift+p p",
      "mac": "cmd+shift+p p"
    }
  ],

  "menus": {
    "editor/context": [
      {
        "command": "pyPlayground.runSelection",
        "when": "editorHasSelection && editorLangId == python",
        "group": "navigation@99"
      }
    ]
  }
},
  "activationEvents": [
    "onCommand:pyPlayground.open",
    "onCommand:pyPlayground.runSelection",
    "onLanguage:python"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "compile": "tsc -p .",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.8",
    "@types/vscode": "^1.108.1",
    "mocha": "^11.7.5",
    "typescript": "^5.3.3"
  },
  "license" : "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rohan7654/pyPlayground.git"
}
}
